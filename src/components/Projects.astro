---
import Card from "@/components/ui/Card.astro";
import {getCollection} from "astro:content";

const projects = await getCollection("projects");
console.log(projects);
---

<section
  id="projects"
  class="mb-10 w-4/5 flex flex-col items-center justify-center md:mb-0"
>
  <h2
    class="font-monospace text-sky-600 font-bold text-2xl text-orange lg:text-4xl"
  >
    Projects
  </h2>
  <span class="mb-10 h-1 w-10 bg-sky-600"></span>
  <div class="mb-10 flex w-4/5 flex-col flex-wrap items-center md:flex-row">
    {
      projects.map((project) => (
        <Card
          url={project.data.link}
          image={project.data.image}
          title={project.data.title}
          description={project.data.description}
          alt={project.data.img_alt}
          tags={project.data.tags}
          demo={project.data.demo}
        />
      ))
    }
  </div>
</section>
